<Window x:Class="PMTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PMTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="350">
    <Grid>
        <StackPanel Orientation="Horizontal" Margin="5,5,0,0">
            <Button Content="开始侦听" Width="95" Height="20"
                    HorizontalAlignment="Left" VerticalAlignment="Top"
                    Click="Start_Button_Click" Cursor="Hand"/>
            <Button Content="测试连接" Width="95" Height="20"
                    HorizontalAlignment="Left" VerticalAlignment="Top"
                    Click="Show_Test" Margin="5,0,0,0" Cursor="Hand"/>
        </StackPanel>
        
        <StackPanel Margin="5,30,5,5" x:Name="PMCortol">
            
        </StackPanel>
        
        
    </Grid>
</Window>
